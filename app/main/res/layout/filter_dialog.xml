<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_header_dialog"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Filter by"
            android:fontFeatureSettings="smcp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/ic_close" />
    </RelativeLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>


    <TextView
        android:id="@+id/btn_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_form"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:paddingBottom="10sp"
        android:paddingLeft="4dp"
        android:paddingTop="10sp"
        android:text="Target"
        android:textColor="@color/black"
        android:textColorHint="@color/dark"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/btn_achieved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="10sp"
        android:background="@drawable/edittext_form"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="10sp"
        android:text="Achieved"
        android:textColor="@color/black"
        android:textColorHint="@color/dark"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/btn_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_form"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:paddingBottom="10sp"
        android:paddingLeft="4dp"
        android:paddingTop="10sp"
        android:text="Others"
        android:textColor="@color/black"
        android:textColorHint="@color/dark"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/days_selection_layout"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical"
        android:layout_weight=".2"
        android:layout_marginBottom="5dp">


        <CheckBox
            android:id="@+id/checkBoxMonday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Monday"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>

        <CheckBox
            android:id="@+id/checkBoxTuesday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Tuesday"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>

        <CheckBox
            android:id="@+id/checkBoxWednesday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Wednesday"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>

        <CheckBox
            android:id="@+id/checkBoxThursday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Thursday"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark" />
        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>


        <CheckBox
            android:id="@+id/checkFriday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Friday"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark" />
        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>


        <CheckBox
            android:id="@+id/checkSaturday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Saturday"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark" />
        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>


        <CheckBox
            android:id="@+id/checkSunday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Sunday"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/dark"/>

        <Button
            android:id="@+id/applyBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_small_curve"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:shadowColor="@color/black"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>